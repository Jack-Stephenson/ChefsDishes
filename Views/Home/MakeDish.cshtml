@model Dish

<form action="NewDish" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span>
    <br>
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <span asp-validation-for="Tastiness"></span>
    <br>
    <label asp-for="Calories"></label>
    <input asp-for="Calories">
    <span asp-validation-for="Calories"></span>
    <br>
    <label for="ChefId">Chef</label>
    <select asp-for="ChefId">
        @{
            foreach(Chef c in ViewBag.AllChefs)
            {
                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
            }
        }
    </select>
    <label asp-for="Description"></label>
    <input asp-for="Description">
    <span asp-validation-for="Description"></span>
    <br>
    <input type="submit" value="Add Dish!">
</form>